

<%= button_to "Log Out", sessions_path, method: :delete %>

<%= form_for @food do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :classification %>
  <%= f.text_field :classification %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.submit %>
<% end %>

<ul>
  <% @foods.each do |food| %>
    <li>
      <%= food.name %> - <%= food.classification %> - <%= food.price %> <%= button_to "Remove", food_path(food), method: :delete%>
    </li>
  <% end %>
</ul>
